#!/usr/bin/env bash

# Kill already running process
killall -9 picom dunst ksuperkey mpd xfce-polkit xfce4-power-manager polybar trackma-gtk xfsettingsd

## Restore Wallpaper
#nitrogen --restore &

## xfce4-settings daemon
xfsettingsd &

## polkit agent
#if [[ ! `pidof xfce-polkit` ]]; then
	#/usr/lib/xfce-polkit/xfce-polkit &
#fi

## Restore Wallpaper
exec wal -Re &

## Enable power management
xfce4-power-manager &

## Start Compositing Manager
exec picom &

## Notification Daemon
exec dunst &

## Start Music Player Daemon
exec mpd &

## Launch Plank
# exec plank &

## Thunar Daemon
exec thunar --daemon &

## Launch Polybar
bash ~/.config/polybar/launch.sh &

## Discord Launch
exec discord &

## KDE Conenct
exec kdeconnect-indicator &

#CopyQ
exec copyq &

## Syncthing
exec syncthing &

## Excute Screenshot script
bash /home/tarek/.scripts/sc.sh &

## Trackma Launch
exec trackma-gtk &

## Touchegg
exec touchegg --daemon &
exec touchegg &

## Enable Super Keys For Menu
ksuperkey -e 'Super_L=Alt_L|F1' &
ksuperkey -e 'Super_R=Alt_L|F1' &

